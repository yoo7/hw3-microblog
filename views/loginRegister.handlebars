{{! Use the main layout }}
{{!< main }}

<section class="login-register">
    <section class = "login-area">
        <h2>Login</h2>
        <!-- errors will appear here -->
        {{#if loginError}}
            <p style="color: red;">{{loginError}}</p>
        {{/if}}
        <form action="/login" method="POST">
            <!-- Following two lines from 5/15 lecture with Dr. Posnett -->
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" class="gaegu-regular">
            <button type="submit" class="gaegu-regular">Login</button>
        </form>
    </section>

    <p class="or">&mdash; OR &mdash;</p>

    <section class = "register-area">
        <h2>Register</h2>
        <!-- errors will appear here -->
        {{#if regError}}
            <p style="color: red;">{{regError}}</p>
        {{/if}}
        <form action="/register" method="POST">
            <!-- Following two lines from 5/15 lecture with Dr. Posnett -->
            <label for="new-username">Username:</label>
            <input type="text" id="new-username" name="username" class="gaegu-regular">
            <button type="submit" class="gaegu-regular">Register</button>
        </form>
    </section>
</section>